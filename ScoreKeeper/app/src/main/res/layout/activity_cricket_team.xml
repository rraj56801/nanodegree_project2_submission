<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cricket_team_cricket_id"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimension_four"
    tools:showIn="@layout/activity_main">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:padding="@dimen/dimension_four"
                android:text="@string/text_score_a"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/black_color"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimension_eight">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:padding="@dimen/dimension_four"
                    android:text="Over"
                    android:textAllCaps="true"
                    android:textColor="@color/black_color"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/over_textview_team_a_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:padding="@dimen/dimension_four"
                    android:text="0.0"
                    android:textAllCaps="true"
                    android:textColor="@color/black_color"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:padding="@dimen/dimension_four"
                    android:text="SCORE"
                    android:textAllCaps="true"
                    android:textColor="@color/black_color"
                    android:textSize="20sp" />

                <TextView

                    android:id="@+id/score_textview_team_a_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimension_four"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:padding="@dimen/dimension_four"
                    android:text="0"
                    android:textAllCaps="true"
                    android:textColor="@color/black_color"
                    android:textSize="20sp" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:padding="@dimen/dimension_four"
                android:text="@string/text_run"
                android:textAllCaps="true"
                android:textColor="@color/black_color"
                android:textSize="24sp" />

            <LinearLayout
                android:id="@+id/linear_button_top_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button_value_a_6"
                        style="@style/style_cricket_score_button"
                        android:text="6 RUN" />

                    <Button
                        android:id="@+id/button_value_a_4"
                        style="@style/style_cricket_score_button"
                        android:text="4 RUN" />

                    <Button
                        android:id="@+id/button_value_a_3"
                        style="@style/style_cricket_score_button"
                        android:text="3 RUN" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button_value_a_2"
                        style="@style/style_cricket_score_button"
                        android:text="2 RUN" />

                    <Button
                        android:id="@+id/button_value_a_1"
                        style="@style/style_cricket_score_button"
                        android:text="1 RUN" />

                    <Button
                        android:id="@+id/button_value_a_zero"
                        style="@style/style_cricket_score_button"
                        android:text="0 RUN" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button_value_a_wide"
                        style="@style/style_cricket_score_button"
                        android:text="wide" />

                    <Button
                        android:id="@+id/button_value_a_noball"
                        style="@style/style_cricket_score_button"
                        android:text="no ball" />

                    <Button
                        android:id="@+id/button_value_a_break"
                        style="@style/style_cricket_score_button"
                        android:text="break" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:padding="@dimen/dimension_four"
                android:text="@string/text_score_b"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/black_color"
                android:textSize="24sp" />

            <LinearLayout
                android:id="@+id/liner_over_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimension_eight">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:padding="@dimen/dimension_four"
                    android:text="Over"
                    android:textAllCaps="true"
                    android:textColor="@color/black_color"
                    android:textSize="20sp" />

                <TextView

                    android:id="@+id/over_textview_team_b_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:padding="@dimen/dimension_four"
                    android:text="0.0"
                    android:textAllCaps="true"
                    android:textColor="@color/black_color"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:padding="@dimen/dimension_four"
                    android:text="SCORE"
                    android:textAllCaps="true"
                    android:textColor="@color/black_color"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/score_textview_team_b_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimension_four"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:padding="@dimen/dimension_four"
                    android:text="0"
                    android:textAllCaps="true"
                    android:textColor="@color/black_color"
                    android:textSize="20sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/run_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:padding="@dimen/dimension_four"
                android:text="@string/text_run"
                android:textAllCaps="true"
                android:textColor="@color/black_color"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button_value_b_6"
                        style="@style/style_cricket_score_button"
                        android:text="6 RUN" />

                    <Button
                        android:id="@+id/button_value_b_4"
                        style="@style/style_cricket_score_button"
                        android:text="4 RUN" />

                    <Button
                        android:id="@+id/button_value_b_3"
                        style="@style/style_cricket_score_button"
                        android:text="3 RUN" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button_value_b_2"
                        style="@style/style_cricket_score_button"
                        android:text="2 RUN" />

                    <Button
                        android:id="@+id/button_value_b_1"
                        style="@style/style_cricket_score_button"
                        android:text="1 RUN" />

                    <Button
                        android:id="@+id/button_value_b_zero"
                        style="@style/style_cricket_score_button"
                        android:text="0 RUN" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button_value_b_wide"
                        style="@style/style_cricket_score_button"
                        android:text="wide" />

                    <Button
                        android:id="@+id/button_value_b_noball"
                        style="@style/style_cricket_score_button"
                        android:text="no ball" />

                    <Button
                        android:id="@+id/button_value_b_break"
                        style="@style/style_cricket_score_button"
                        android:text="break" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
